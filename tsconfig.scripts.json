{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2020"],
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2020"]
    },
    "transpileOnly": true,
    "files": true
  }
}

