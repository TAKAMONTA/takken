# =====================================================
# 宅建合格ロード - 環境変数設定ファイル
# =====================================================
# このファイルを .env.local にコピーして使用してください
# git にコミットしないでください！
# =====================================================

# -----------------------------------------------------
# Firebase Configuration（必須）
# -----------------------------------------------------
# Firebase コンソール (https://console.firebase.google.com/) から取得
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase エミュレータを使用する場合（開発環境のみ）
# NEXT_PUBLIC_USE_FIREBASE_EMULATORS=true

# -----------------------------------------------------
# 暗号化キー（必須・32文字以上）
# -----------------------------------------------------
# セキュリティのため、32文字以上のランダムな文字列を設定してください
# 生成方法: openssl rand -base64 32
# ⚠️ 本番環境と開発環境で異なるキーを使用してください
NEXT_PUBLIC_ENCRYPTION_KEY=your_32_character_or_longer_encryption_key_here

# -----------------------------------------------------
# AI API Configuration（いずれか1つ以上必須）
# -----------------------------------------------------
# AI機能を使用する場合は、以下のいずれかを設定してください
# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI (https://makersuite.google.com/app/apikey)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# -----------------------------------------------------
# Environment（開発環境 or 本番環境）
# -----------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------
# App Configuration
# -----------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------
# PWA Configuration（オプション - プッシュ通知を使用する場合）
# -----------------------------------------------------
# VAPID キーの生成方法: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# =====================================================
# iOS In-App Purchase Configuration（オプション - iOS課金機能を使用する場合）
# =====================================================
# Apple App Store Connect から取得
# APPLE_SHARED_SECRET=your_apple_shared_secret_here
# NEXT_PUBLIC_APPLE_APP_ID=your_apple_app_id_here

# =====================================================
# 設定完了後の確認
# =====================================================
# 1. このファイルを .env.local にコピー
# 2. 必要な値を設定
# 3. 開発サーバーを再起動: npm run dev
# 4. ブラウザでコンソールを確認し、エラーがないことを確認
# =====================================================
